# Bot Configuration Example
# Copy this file to bot_config.yaml and update with your repository paths

bots:
  # Bot name - will be used to find environment variables:
  # - <BOT_NAME>_BOT_TOKEN (e.g., BACKEND_BOT_TOKEN)
  # - <BOT_NAME>_APP_TOKEN (e.g., BACKEND_APP_TOKEN)
  backend_bot:
    # Absolute or relative path to the git repository
    repo_path: "/path/to/your/backend/repo"
    # Timeout in seconds for subprocess execution
    timeout: 300
    # Maximum number of Claude turns (prevents infinite loops, default: 40)
    max_turns: 40
    # Allowed tools for Claude Code CLI (optional, empty = use Claude's defaults)
    # Built-in tools (always available): Read, Grep, Ls, Find
    # Add Bash commands for git exploration, file reading, etc.
    allowed_tools:
      - Read
      - Grep
      - Ls
      - Find
      - "Bash(git log)"
      - "Bash(git show)"
      - "Bash(git diff)"
      - "Bash(git blame)"
    # List of emoji reactions to randomly choose from when processing (optional)
    processing_emojis:
      - hourglass_flowing_sand
      - eyes
      - robot_face
    # Context window settings (optional)
    context:
      # Max messages to include in prompt (default: 100)
      # For new sessions: includes last N messages from thread
      # For resumed sessions: includes last N messages since last bot response
      max_history: 50

  frontend_bot:
    repo_path: "/path/to/your/frontend/repo"
    timeout: 180
    max_turns: 40
    allowed_tools:
      - Read
      - Grep
      - Ls
      - Find
      - "Bash(git log)"
      - "Bash(git show)"
      - "Bash(git diff)"
      - "Bash(git blame)"
    processing_emojis:
      - wave
      - thumbsup
    context:
      max_history: 50

# You can add more bots by following the same pattern:
# another_bot:
#   repo_path: "/path/to/another/repo"
#   timeout: 240
#   max_turns: 40
#   processing_emojis:
#     - your_custom_emoji
#   context:
#     max_history: 50
